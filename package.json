    "express": "^4.13.4",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "if-env": "^1.0.0",
    "node-sass": "^3.11.2",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0",
    "react-toolbox": "^1.3.1",
